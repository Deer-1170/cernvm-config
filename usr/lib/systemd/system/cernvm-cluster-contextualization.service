[Unit]
Description=CernVM cluster online API contextualization
After=cloud-init.service
Before=cloud-config.service multi-user.target
Wants=cloud-init.service cloud-config.service
ConditionPathExists=/mnt/.rw/context/ucontext

[Service]
Type=oneshot
ExecStart=/etc/cernvm/service.d/cernvm-cluster-contextualization
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
