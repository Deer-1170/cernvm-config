#%Module 1.0
##
##  ROOT module for use with 'environment-modules' package:
##  Sets the CernVM version of ROOT
## 

set rootsys   /cvmfs/sft.cern.ch/lcg/releases/ROOT/6.10.04-4c60e/x86_64-centos7-gcc7-opt
set compiler  /cvmfs/sft.cern.ch/lcg/releases/gcc/7.1.0/x86_64-centos7
set png       /cvmfs/sft.cern.ch/lcg/releases/png/1.6.17-1a97c/x86_64-centos7-gcc7-opt
set gsl       /cvmfs/sft.cern.ch/lcg/releases/GSL/2.1-36ee5/x86_64-centos7-gcc7-opt

setenv        ROOTSYS          $rootsys
prepend-path  LD_LIBRARY_PATH  $compiler/lib64
prepend-path  LD_LIBRARY_PATH  $compiler/lib
prepend-path  LD_LIBRARY_PATH  $png/lib
prepend-path  LD_LIBRARY_PATH  $gsl/lib
prepend-path  LD_LIBRARY_PATH  $rootsys/lib
prepend-path  PYTHON_PATH      $rootsys/lib
prepend-path  PATH             $compiler/bin
prepend-path  PATH             $rootsys/bin
prepend-path  MANPATH          $rootsys/man

